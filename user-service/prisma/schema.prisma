generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserProfile {
  id           String   @id @default(uuid())
  username     String   @unique
  displayName  String?
  bio          String?
  avatarUrl    String?
  verified     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  followers    UserFollow[]  @relation("UserFollowing")
  following    UserFollow[]  @relation("UserFollowers")
  
  @@map("user_profiles")
}

model UserFollow {
  id           String   @id @default(uuid())
  followerId   String
  followingId  String
  createdAt    DateTime @default(now())
  
  follower     UserProfile     @relation("UserFollowers", fields: [followerId], references: [id], onDelete: Cascade)
  following    UserProfile     @relation("UserFollowing", fields: [followingId], references: [id], onDelete: Cascade)
  
  @@unique([followerId, followingId])
  @@map("user_follows")
}

